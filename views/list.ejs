<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To do list</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>

    <div class="box">
        <ul>
            <% newItem.forEach(function(item){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                        <input type="hidden" name="listName" value="<%= kindOfDay %>">
                        <p><%= item.name %> </p>
                    </div>
                </form>
            <% }) %>
        </ul>
    </div>

    <form class="formitem" action="/" method="post">
        <input type="text" name="newThing" placeholder="New thing">
        <button type="submit" name="button" value=<%= kindOfDay %>>+</button>
    </form>
</body>
<footer>From HCMUT with love</footer>
</html>